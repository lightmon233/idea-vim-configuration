[
    {
        "key": "j k",
        "command": "-extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl && !suggestWidgetVisible"
    },
    {
        "key": "<leader> e",
        "command": "extension.nvimTreeToggle",
        "when": "editorTextFocus && vim.active && !inDebugRepl && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor",
        "when": "editorTextFocus && vim.active && !inDebugRepl && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousEditor",
        "when": "editorTextFocus && vim.active && !inDebugRepl && !suggestWidgetVisible"
    }
]
